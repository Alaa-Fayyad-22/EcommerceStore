@model IEnumerable<EcommerceStore.Models.Wishlist>

@{
    ViewData["Title"] = "My Wishlist";
}

<h2>My Wishlist</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Your wishlist is empty.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>$@item.Product.Price</td>
                    <td>
                        <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@item.Product.Id" class="btn btn-primary btn-sm">Add to Cart</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
