@model EcommerceStore.Models.Order
@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>
<hr />

<h4>Are you sure you want to delete this order?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-3">Order ID</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.User?.FullName (@Model.User?.Email)</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>

        <dt class="col-sm-3">Total Amount</dt>
        <dd class="col-sm-9">$@Model.TotalAmount</dd>

        <dt class="col-sm-3">Shipping Address</dt>
        <dd class="col-sm-9">@Model.ShippingAddress</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
