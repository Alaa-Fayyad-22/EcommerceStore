@model EcommerceStore.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<h2>Thank you for your order!</h2>
<p>Your order <strong>#@Model.Id</strong> has been placed successfully.</p>

<h4>Order Details</h4>
<ul>
    <li><strong>Status:</strong> @Model.Status</li>
    <li><strong>Order Date:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</li>
    <li><strong>Shipping Address:</strong> @Model.ShippingAddress</li>
    <li><strong>Total:</strong> @Model.TotalAmount.ToString("C")</li>
</ul>

<h4>Items in Your Order</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@((item.Price * item.Quantity).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-controller="Store" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
    <a asp-controller="Orders" asp-action="Index"  class="btn btn-secondary">View My Orders</a>
</div>
